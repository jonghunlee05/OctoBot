<mujoco model="stick_simple">
  <compiler angle="degree"/>
  <option timestep="0.002" gravity="0 0 -9.81"/>

  <default>
    <joint type="hinge" axis="0 1 0" range="-180 180" damping="1.0"/>
    <geom type="capsule" rgba="0.2 0.8 0.2 1"/>
  </default>

  <worldbody>
    <!-- Ground -->
    <geom name="floor" type="plane" size="5 5 0.1" pos="0 0 0" rgba="0.8 0.8 0.8 1"/>

    <!-- Base fixed at origin -->
    <body name="base" pos="0 0 0.05">
      <geom type="sphere" size="0.03" rgba="0.1 0.1 0.1 1"/>

      <!-- Stick with hinge joint -->
      <body name="stick" pos="0 0 0.05">
        <joint name="hinge"/>
        <!-- 40 cm long stick along +Z -->
        <geom fromto="0 0 0  0 0 0.4" size="0.015" rgba="0.2 0.8 0.2 1"/>
      </body>
    </body>
  </worldbody>

  <!-- Position actuator on the hinge -->
  <actuator>
    <position name="hinge_actuator" joint="hinge" kp="50" ctrlrange="-180 180"/>
  </actuator>
</mujoco>
